= form_for @feature do |c|
  - if @feature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feature.errors.count, "error")} prohibited this song from being saved:"
      %ul
        - @feature.errors.full_messages.each do |msg|
          %li= msg

  %div
    = c.label :name
    = c.text_field :name
  %div
    =c.label :price
    =c.number_field :price
  =c.submit